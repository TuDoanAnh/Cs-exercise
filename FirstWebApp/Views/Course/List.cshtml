@using FirstWebApp.Models
@model List<Course>
<!doctype html>
<html>
    <head>
        <title>List ne</title>
    </head>
    <body>
        <div>
            <div style="width:30%; float:left">
                <ul>
                    <li>
                        <a href="/Course/List">All Subject</a>
                    </li>
                    @foreach (var subject in ViewBag.Subjects)
                   {
                       <li>
                            <a href="/Course/List/@subject.SubjectId">@subject.SubjectName</a>
                       </li>
                   }
                </ul>
            </div>
            <div style="width:65%; float:left">
                @if (Model.Count == 0)
                {
                    <p>Khong co Course nek</p>
                }
                else
                {
                    <h3>Course nek</h3>
                    <table>
                        <thead>
                            <th>CourseCode</th>
                            <th>Descriotion</th>
                            <th></th>
                            <th></th>
                        </thead>
                        <tbody>
                            @foreach  (Course course in Model)
                           {
                               <tr>
                                   <td>@course.CourseCode</td>
                                   <td>@course.CourseDescription</td>
                                   <td><a href="/Course/Edit/@course.CourseId">Edit</a></td>
                                   <td><a href="/Course/DoDelete/@course.CourseId">Delete</a></td>
                               </tr>
                           }
                        </tbody>
                    </table>
                }
             </div>
        </div>
    </body>
</html>